<h2 class="styleguide-module__title">Typography</h2>

if items.intro
	each paragraph in items.intro
		p.styleguide-module__paragraph!=paragraph
.titles
	each font in items.fonts
		- var heading = '<h' + font.heading + ' class="' + font.className + '" contenteditable="true">' + font.title + '</h' + font.heading + '>'
		span.styleguide-module__title--light #{font.fontName} - #{font.fontSize}
		!{heading}
<br>
<h5 class="styleguide-module__title--small">Paragraphs</h5>
each paragraph in items.paragraphs
	span.styleguide-module__title--light #{paragraph.fontName} - #{paragraph.fontSize}
	p(class=paragraph.className contenteditable="true")=paragraph.text

<h2 class="styleguide-module__title">Buttons</h2>
<ul class="styleguide-list--buttons snippet">
</ul>

<h2 class="styleguide-module__title">Tables</h2>
each table in items.tables
  table.snippet(class=table.tableClass)
    if table.head
      thead
        tr
          each head in table.head
            th=head
    if table.body
      tbody
        each row in table.body
          tr
            each td in row.td
              td=td
    if table.footer
      tfooter
        tr
          each td in table.footer
            td=td

